# Kubernetes Secret 예시 파일
# 이 파일을 secret.yaml로 복사하고 base64로 인코딩된 값으로 수정하세요
# 
# base64 인코딩 방법:
# echo -n "your-secret-value" | base64

apiVersion: v1
kind: Secret
metadata:
  name: agent-secrets
  namespace: agentic-ai-ops
type: Opaque
data:
  # AWS 자격증명 (base64 인코딩 필요)
  # aws-access-key-id: <base64-encoded-value>
  # aws-secret-access-key: <base64-encoded-value>
  
  # OpenSearch 인증 정보
  # opensearch-username: <base64-encoded-value>
  # opensearch-password: <base64-encoded-value>
  
  # API 키 등
  # api-key: <base64-encoded-value>
